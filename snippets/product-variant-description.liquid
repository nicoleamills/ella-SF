<div class="variant_list">
    {% for variant in product.variants %}
      <div class="list {% if product.selected_or_first_available_variant.id == variant.id %}active{% endif %}" data-variant="{{ variant.id }}">
        <div>{{ variant.metafields.custom.exclusive_poster }}</div>
        <div><strong>Ships by:</strong> {{ variant.metafields.custom.variant_release_date }}</div>
        <div> <strong>Available in:</strong> {{ product.metafields.custom.rightsline_shipping_restriction }}</div>
        
        {% if variant.metafields.custom.variant_special_offer != blank %}
          <p style="background-color:#DFEFF5; color:#000; padding: 10px">
            <b>Special Offer:</b> {{ variant.metafields.custom.variant_special_offer }}
          </p>
        {% endif %}
        
        {% if variant.metafields.custom.variant_product_note != blank %}
          <p style="background-color:#EBEBEB; color:#000; padding: 10px">
            <b>Product Note:</b>
            {{ variant.metafields.custom.variant_product_note }}
          </p>
        {% endif %}

        {% if variant.metafields.custom.variant_subtitles != blank %}
          <p style="padding: 10px">
            <b>Variant Subtitles:-</b>
            {{ variant.metafields.custom.variant_subtitles }}
          </p>
        {% endif %}

      </div>

    {% endfor %}
  </div>

{%- assign propertySize = product.metafields.c_f.property.value | size -%}
{%- if  product.has_only_default_variant != true -%}
    {%- assign propertySize = current_variant.metafields.c_f.property.value | size -%}
    {%- if propertySize > 0 -%}
        <div class="productView-info productView-propertyInfo" id="product-property-{{ product.id }}">
            <h2 class="productView-info-title">{{ 'products.product.measurements' | t }}</h2>
            {%- for property in current_variant.metafields.c_f.property.value -%}
                <div class="productView-info-item">
                    <span class="productView-info-name">{{ property.first | capitalize }}:</span>
                    <span class="productView-info-value">{{ property.last | capitalize }}</span>
                </div>
            {%- endfor -%}
        </div>
    {%- else -%}
        {%- assign propertySize = product.metafields.c_f.property.value | size -%}
        {%- if propertySize > 0 -%}
            <div class="productView-info productView-propertyInfo" id="product-property-{{ product.id }}">
                <h2 class="productView-info-title">{{ 'products.product.measurements' | t }}</h2>
                {%- for property in product.metafields.c_f.property.value -%}
                    <div class="productView-info-item">
                        <span class="productView-info-name">{{ property.first | capitalize }}:</span>
                        <span class="productView-info-value">{{ property.last | capitalize }}</span>
                    </div>
                {%- endfor -%}
            </div>
        {%- endif -%}
    {%- endif -%}
{%- else -%}
    {%- assign propertySize = product.metafields.c_f.property.value | size -%}
    {%- if propertySize > 0 -%}
        <div class="productView-info productView-propertyInfo" id="product-property-{{ product.id }}">
            <h2 class="productView-info-title">{{ 'products.product.measurements' | t }}</h2>
            {%- for property in product.metafields.c_f.property.value -%}
                <div class="productView-info-item">
                    <span class="productView-info-name">{{ property.first | capitalize }}:</span>
                    <span class="productView-info-value">{{ property.last | capitalize }}</span>
                </div>
            {%- endfor -%}
        </div>
    {%- endif -%}
{%- endif -%}

